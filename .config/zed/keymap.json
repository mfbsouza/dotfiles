[
  {
    "bindings": {
      "ctrl-e": "workspace::ToggleLeftDock",
      "ctrl-tab": "workspace::ToggleBottomDock",
      "f f": "file_finder::Toggle",
      "f g": "pane::DeploySearch",
      "f b": "tab_switcher::Toggle"
    }
  },
  {
    "context": "FileFinder || (FileFinder > Picker > Editor) || (FileFinder > Picker > menu)",
    "bindings": {
      "ctrl-v": "pane::SplitRight"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-g": "search::SelectNextMatch",
      "ctrl-shift-g": "search::SelectPreviousMatch",
      "ctrl-right": "pane::SwapItemRight",
      "ctrl-left": "pane::SwapItemLeft"
    }
  },
  {
    "context": "VimControl || !Editor && !Terminal",
    "bindings": {
      "ctrl-w ctrl-right": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "right" }
      ],
      "ctrl-w ctrl-left": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "left" }
      ],
      "ctrl-w ctrl-up": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "up" }
      ],
      "ctrl-w ctrl-down": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "down" }
      ]
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      "f o": "outline::Toggle",
      "f r": "editor::FindAllReferences",
      "g r": "editor::Rename",
      "g c": "editor::ToggleComments",
      "g f": "editor::Format",
      "g d": "editor::GoToDefinition",
      "g t": "editor::GoToTypeDefinition",
      "g D": "editor::GoToDefinitionSplit"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      "shift-up": "editor::MoveLineUp",
      "shift-down": "editor::MoveLineDown",
      "shift-right": "editor::Indent",
      "shift-left": "editor::Outdent"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "shift-tab": "editor::ContextMenuPrevious",
      "up": "editor::ContextMenuPrevious",
      "ctrl-p": "editor::ContextMenuPrevious",
      "tab": "editor::ContextMenuNext",
      "down": "editor::ContextMenuNext",
      "ctrl-n": "editor::ContextMenuNext",
      "pageup": "editor::ContextMenuFirst",
      "pagedown": "editor::ContextMenuLast"
    }
  }
]
